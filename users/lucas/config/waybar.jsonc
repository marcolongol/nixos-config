{
  "layer": "top",
  "height": "28px",
  "spacing": "4px",
  "reload_style_on_change": true,
  "modules-left": ["hyprland/workspaces", "tray"],
  "modules-center": ["temperature", "clock"],
  "modules-right": [
    // "mpd",
    // "pulseaudio",
    // "power-profiles-daemon",
    "group/expand",
    // "backlight",
    // "keyboard-state",
    // "tray",
    "bluetooth",
    "network",
    "battery",
    "group/power",
  ],
  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "active": "ÔÑë",
      "default": "ÔÑë",
      "empty": "ÔÑë",
    },
    "persistent-workspaces": {
      "*": [1, 2, 3, 4, 5],
    },
  },
  "temperature": {
    "format": "{icon} {temperatureC}¬∞C",
    "format-icons": ["Ôãã", "Ôãä", "Ôãâ", "Ôãà", "Ôãá"],
  },
  "group/expand": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": "0.2s",
      "transition-to-left": true,
      "click-to-reveal": true,
    },
    "modules": ["custom/expand", "cpu", "memory", "disk"],
  },
  "custom/expand": {
    "format": "ÔÑÑ",
    "tooltip": false,
  },
  "group/power": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "not-power",
      "transition-left-to-right": false,
    },
    "modules": [
      "custom/power", // First element is the "group leader" and won't ever be hidden
      "custom/quit",
      "custom/lock",
      "custom/reboot",
    ],
  },
  "custom/quit": {
    "format": "Û∞óº",
    "tooltip-format": "Quit Hyprland",
    "tooltip": true,
    "on-click": "hyprctl dispatch exit",
  },
  "custom/lock": {
    "format": "Û∞çÅ",
    "tooltip-format": "Lock Screen",
    "tooltip": true,
    "on-click": "swaylock",
  },
  "custom/reboot": {
    "format": "Û∞úâ",
    "tooltip-format": "Reboot System",
    "tooltip": true,
    "on-click": "reboot",
  },
  "custom/power": {
    "format": "ÔÄë",
    "tooltip-format": "Shutdown System",
    "tooltip": true,
    "on-click": "shutdown now",
  },
  "cpu": {
    "interval": 1,
    "format": "Ôãõ {usage}%",
    "max-length": 10,
    "states": {
      "good": 50,
      "warning": 70,
      "critical": 90,
    },
  },
  "memory": {
    "interval": 30,
    "format": "\uefc5 {}%",
    "max-length": 10,
    "tooltip-format": "{used}GB / {total}GB ({percentage}%)",
  },
  "disk": {
    "format": "ÔÇ† {percentage_used}%",
    "states": {
      "mounted": 0,
      "warning": 70,
      "critical": 90,
    },
    "path": "/persist",
  },
  "clock": {
    "interval": 1,
    "format": "ÔÄó {:%H:%M}",
    "format-alt": "{:%A, %B %d, %Y (%R)}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>",
      },
    },
    "actions": {
      "on-click-right": "mode",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down",
    },
  },
  "network": {
    "interval": 1,
    "format-wifi": "Û∞§®",
    "format-wifi-alt": "{signalStrength}% Û∞§®",
    "format-ethernet": "Óºâ",
    "format-disconnected": "Ó¨Å",
    "tooltip-format-disconnected": "Error",
    "tooltip-format-wifi": "{essid} ({ifname})\n{ipaddr}\n{signalStrength}%\n{bandwidthDownBytes} ‚Üì {bandwidthUpBytes} ‚Üë",
    "tooltip-format-ethernet": "{ifname} üñß ",
    "on-click-right": "alacritty -e nmtui",
  },
  "bluetooth": {
    "format-on": "Û∞ÇØ",
    "format-off": "Û∞Ç≤",
    "format-disabled": "Û∞Ç≤",
    "format-connected-battery": "{device_battery_percentage}% Û∞ÇØ",
    "format-alt": "{device_alias} Û∞ÇØ",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\n{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\n{device_address}\n{device_battery_percentage}%",
    "on-click-right": "blueman-manager",
  },
  "battery": {
    "interval": 1,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15,
    },
    "format": "{icon}",
    "format-charging": "{capacity}% Û∞ÇÑ Ó¨≠",
    "format-alt": "{capacity}% {icon}",
    "format-icons": ["Û∞Åª", "Û∞Åº", "Û∞Åæ", "Û∞ÇÄ", "Û∞ÇÇ", "Û∞Åπ"],
  },
}
